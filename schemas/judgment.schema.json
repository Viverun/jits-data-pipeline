{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JITS Judgment Schema",
  "type": "object",
  "required": [
    "judgment_id",
    "metadata",
    "text",
    "paragraphs",
    "annotations"
  ],
  "properties": {
    "judgment_id": {
      "type": "string",
      "description": "Stable unique judgment identifier"
    },
    "metadata": {
      "type": "object",
      "required": ["court", "year", "jurisdiction"],
      "properties": {
        "court": { "type": "string" },
        "court_level": { "type": "string" },
        "jurisdiction": { "type": "string" },
        "bench": { "type": "string" },
        "case_number": { "type": "string" },
        "decision_date": { "type": "string" }
      }
    },
    "text": {
      "type": "string",
      "description": "Normalized full judgment text"
    },
    "paragraphs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["para_id", "text"],
        "properties": {
          "para_id": { "type": "integer" },
          "text": { "type": "string" }
        }
      }
    },
    "annotations": {
      "type": "object",
      "properties": {
        "classification": { "type": "object" },
        "statutory_transitions": { "type": "array" },
        "issues": { "type": "array" },
        "citations": { "type": "array" },
        "similarity": { "type": "object" }
      }
    }
  }
}
